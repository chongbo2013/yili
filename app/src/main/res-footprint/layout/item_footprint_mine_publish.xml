<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp">

    <ImageView
        android:id="@+id/iv_identify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ico_footprint_publish"/>

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/footprint.mine.publish"
        android:textColor="@color/color_title_small"
        android:textSize="@dimen/fonts_desc"
        android:gravity="center"
        android:layout_toRightOf="@id/iv_identify"
        android:layout_alignTop="@id/iv_identify"
        android:layout_alignBottom="@id/iv_identify"
        android:layout_marginLeft="15dp"/>

    <android.support.v7.widget.CardView
        android:id="@+id/card_add"
        style="@style/CardStyle"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@id/tv_date"
        android:layout_alignLeft="@id/tv_date"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp">

        <com.lots.travel.widget.RatioedImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/bg_footprint_publish"
            android:src="@drawable/ico_footprint_publish_camera"
            android:scaleType="center"
            android:layout_margin="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/footprint.mine.publish.tip"
            android:textColor="@color/color_text_secondary"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="120dp"/>

    </android.support.v7.widget.CardView>

</RelativeLayout>