<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        tools:text="2017年8月"
        android:gravity="center"
        android:textColor="@color/color_title_small"/>

    <com.lots.travel.widget.calendar.trip.TripMonthView
        android:id="@+id/month_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        app:currentMonth="2017-9"
        app:cellTextSize="@dimen/fonts_desc"
        app:cellTextColor="@color/color_title_small"
        app:cellChooseTextColor="@android:color/white"
        app:cellDisableTextColor="@color/color_text"
        app:fillColor="@color/color_main"/>

</RelativeLayout>