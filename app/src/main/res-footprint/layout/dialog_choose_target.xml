<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:showDividers="middle"
    android:divider="@drawable/divider_horizontal"
    android:background="@drawable/bg_dialog_publish"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/tv_public"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/publish.state.public"
        android:textSize="@dimen/head_small"
        android:textColor="@color/color_title_big"
        android:gravity="center"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="@drawable/bg_dialog_button"/>

    <TextView
        android:id="@+id/tv_friends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/publish.state.friends"
        android:textSize="@dimen/head_small"
        android:textColor="@color/color_title_big"
        android:gravity="center"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="@drawable/bg_dialog_button"/>

    <TextView
        android:id="@+id/tv_me"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/publish.state.me"
        android:textSize="@dimen/head_small"
        android:textColor="@color/color_title_big"
        android:gravity="center"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="@drawable/bg_dialog_button"/>

    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/delete"
        android:textSize="@dimen/head_small"
        android:textColor="@color/color_warn"
        android:gravity="center"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="@drawable/bg_dialog_button"/>

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        android:textSize="@dimen/head_small"
        android:textColor="@color/color_main"
        android:gravity="center"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="@drawable/bg_dialog_button"/>

</LinearLayout>