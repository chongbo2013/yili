<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.lots.travel.widget.RatioedImageView
        android:id="@+id/iv_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:src="@drawable/img_tang"
        android:scaleType="fitXY"
        android:background="@drawable/bg_cover_content"
        app:ratio="1.6"/>

    <TextView
        android:id="@+id/tv_cover_change"
        android:visibility="invisible"
        android:background="@drawable/bg_cover_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:textSize="@dimen/fonts_desc"
        android:textColor="@android:color/white"
        android:text="@string/schedule.cover.change"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/tv_cover_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/schedule.cover.upload"
        android:textSize="@dimen/fonts_tip"
        android:textColor="@color/color_main"
        android:layout_gravity="center"
        android:drawableTop="@drawable/ico_cover_upload"
        android:drawablePadding="6dp"/>

</merge>