<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:layout_margin="10dp">

    <ImageView
        android:id="@+id/iv_destination_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/label_destination"/>

    <TextView
        android:id="@+id/tv_destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_destination_label"
        tools:text="普吉岛"
        android:textSize="@dimen/fonts_desc"
        android:textColor="@android:color/white"
        android:layout_alignTop="@id/iv_destination_label"
        android:layout_alignBottom="@id/iv_destination_label"
        android:background="@drawable/bg_label_destination"
        android:drawableLeft="@drawable/ico_destination_airplane"
        android:drawablePadding="4dp"
        android:layout_marginTop="3dp"
        android:paddingRight="5dp"
        android:gravity="center"/>

</merge>