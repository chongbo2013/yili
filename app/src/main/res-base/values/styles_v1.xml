<resources>

    <!-- 应用默认开关样式 -->
    <style name="DefaultToggleButton">
        <item name="android:clickable">true</item>
        <item name="android:button">@drawable/btn_toggle</item>
    </style>

    <!-- 应用默认RatingBar样式 -->
    <style name="DefaultRatingBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/ratingbar</item>
        <item name="android:indeterminateDrawable">@drawable/ratingbar</item>
        <item name="android:thumb">@null</item>
        <item name="android:isIndicator">false</item>
        <item name="android:minHeight">15dp</item>
        <item name="android:maxHeight">15dp</item>
    </style>

    <style name="DefaultDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="DefaultPopupAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="CardStyle" xmlns:tools="http://schemas.android.com/tools">
        <item name="cardCornerRadius">5dp</item>
        <item name="cardElevation">1dp</item>
        <item name="cardMaxElevation">1dp</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">@drawable/bg_card_default</item>
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@drawable/lift_on_touch</item>
    </style>

</resources>
