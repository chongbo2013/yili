<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            style="@style/CardStyle"
            android:clickable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:showDividers="middle"
                android:divider="@drawable/divider_horizontal_padding_10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:id="@+id/tv_nickname_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/person.nickname"
                        android:textSize="@dimen/fonts_desc"
                        android:textColor="@color/color_text"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:id="@+id/tv_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="唐艺昕"
                        android:textSize="@dimen/fonts_desc"
                        android:textColor="@color/color_title_small"
                        android:layout_marginLeft="80dp"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:id="@+id/tv_sex_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/person.sex"
                        android:textSize="@dimen/fonts_desc"
                        android:textColor="@color/color_text"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:id="@+id/tv_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="女"
                        android:textSize="@dimen/fonts_desc"
                        android:textColor="@color/color_title_small"
                        android:layout_marginLeft="80dp"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:id="@+id/tv_profession_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/person.profession"
                        android:textSize="@dimen/fonts_desc"
                        android:textColor="@color/color_text"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:id="@+id/tv_profession"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="演员 艺人"
                        android:textSize="@dimen/fonts_desc"
                        android:textColor="@color/color_title_small"
                        android:layout_marginLeft="80dp"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_emotion"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_emotion_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/person.emotion"
                        android:textSize="@dimen/fonts_desc"
                        android:textColor="@color/color_text"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:id="@+id/tv_emotion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="单身"
                        android:textSize="@dimen/fonts_desc"
                        android:textColor="@color/color_title_small"
                        android:layout_marginLeft="80dp"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_location"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_location_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/person.location"
                        android:textSize="@dimen/fonts_desc"
                        android:textColor="@color/color_text"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:id="@+id/tv_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="红海滩"
                        android:textSize="@dimen/fonts_desc"
                        android:textColor="@color/color_title_small"
                        android:layout_marginLeft="80dp"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_join_time"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_join_time_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/person.join.time"
                        android:textSize="@dimen/fonts_desc"
                        android:textColor="@color/color_text"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:id="@+id/tv_join_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="2017-04-01"
                        android:textSize="@dimen/fonts_desc"
                        android:textColor="@color/color_title_small"
                        android:layout_marginLeft="80dp"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_control"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:text="@string/person.home.expand"
                    android:textSize="@dimen/fonts_desc"
                    android:textColor="@color/color_text"
                    android:gravity="center"
                    android:background="@drawable/btn_home_control"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </android.support.v4.widget.NestedScrollView>

</android.support.v4.widget.SwipeRefreshLayout>