<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <scale android:fromXScale="0.6" android:toXScale="1.6"
        android:fromYScale="0.6" android:toYScale="1.6"
        android:pivotX="50%" android:pivotY="50%"
        android:duration="150" />

    <scale android:fromXScale="1" android:toXScale="0.625"
        android:fromYScale="1" android:toYScale="0.625"
        android:pivotX="50%" android:pivotY="50%"
        android:duration="200" android:delay="150" />

    <alpha android:fromAlpha="0.0" android:toAlpha="1.0"
        android:interpolator="@android:interpolator/accelerate_decelerate"
        android:duration="350" />

</set>